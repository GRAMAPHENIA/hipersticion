---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const characters = await getCollection("characters");
// console.log(characters);

characters[0].slug;
---

<Layout title="Hipersticion" description="Welcome to my website!">
  <main>
    <h1 class="text-center text-7xl mb-24">
      HIPERS <span class="block">TICION</span>
    </h1>
  </main>

  <section aria-label="Personajes de la historia">
    <div class="px-4 mx-auto max-w-screen-xl">
      <div class="grid gap-6 md:grid-cols-2">
        {
          characters.map((characters) => {
            const { slug, data } = characters;
            const { title, img, age, description } = data;

            return (
              <article class="flex">
                <a
                  href={`/personajes/${slug}`}
                  class="relative group w-48 mr-5"
                >
                  <img
                    src={`/${img}`}
                    alt={title}
                    class="hover:saturate-150 brightness-105 hover:blur-xs rounded-lg w-full h-auto transition-all duration-100 ease-in-out "
                  />
                  <div class="absolute inset-0 bg-white/5 backdrop-blur-sm bg-opacity-50 opacity-0 group-hover:opacity-100 hover:border-4 border-emerald-400/5 transition-opacity duration-300 rounded-lg flex items-center justify-center">
                    <span class="text-white text-xs font-semibold">
                      Ver ficha t√©cnica
                    </span>
                  </div>
                </a>
                <div class="flex flex-col justify-center">
                  <h2 class="mb-2 text-2xl font-bold leading-tight text-white">
                    {title}
                  </h2>
                  <p class="mb-4 text-gray-400 max-w-sm">{description}</p>
                  <span class="text-xs">Actualidad</span>
                </div>
              </article>
            );
          })
        }
      </div>
    </div>
  </section>
</Layout>
